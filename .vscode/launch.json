  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "-u",
        "tdd",
        "--watch",
        "--timeout",
        "8640000",
        "--colors",
        "${workspaceFolder}/test/**/*.spec.js"
      ],
      "internalConsoleOptions": "openOnSessionStart"
    }
  ]
}
